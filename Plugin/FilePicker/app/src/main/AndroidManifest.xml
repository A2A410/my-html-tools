<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a2a410.pluginfp">

    <permission
        android:name="com.a2a410.pluginfp.ACCESS_PLUGIN"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".FilePickerActivity"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:permission="com.a2a410.pluginfp.ACCESS_PLUGIN">
            <intent-filter>
                <action android:name="com.a2a410.pluginfp.ACTION_PICK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.a2a410.pluginfp.ACTION_SAVE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
